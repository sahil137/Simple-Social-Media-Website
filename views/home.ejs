<h1>
    Code Forum / <%= title %>
</h1>

<section id = "feed-post">
    <h4>Posts</h4>

    <% if (locals.user){%>
        <form action="/post/create" id = "new-post-form" method="POST">
            <textarea name="content" id="" cols="30" rows="3" placeholder="Type Here"></textarea>
            <input type="submit" value="Post">
        </form>
    <%} %>

    <div id="post-list-container">
        <ul>
            <% for(post of posts){%>
                <li>
                    <p>
                        <%= post.content %>
                        <br>
                        <%= post.user.name %>
                    </p>
                </li>
            <%} %>
        </ul>
    </div>

</section>